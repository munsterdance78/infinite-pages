{
  "name": "infinite-pages-debugger",
  "version": "1.0.0",
  "description": "Website debugger for Infinite Pages - tests infinite-pages.com story creation and API endpoints",
  "main": "server.js",
  "bin": {
    "debug-site": "./cli.js"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node cli.js https://www.infinite-pages.com",
    "test:endpoints": "node cli.js https://www.infinite-pages.com --endpoints",
    "test:story-creation": "node cli.js https://www.infinite-pages.com --story-creation",
    "test:json": "node cli.js https://www.infinite-pages.com --json",
    "test:fix-plan": "node cli.js https://www.infinite-pages.com --fix-plan",
    "test:local": "node cli.js http://localhost:3000",
    "setup": "npx playwright install chromium"
  },
  "dependencies": {
    "express": "^4.18.2",
    "playwright": "^1.40.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "infinite-pages",
    "claude-code",
    "cursor",
    "website-testing",
    "debugging",
    "story-creation",
    "api-testing",
    "next.js",
    "supabase"
  ],
  "author": "Claude Code Assistant",
  "license": "MIT"
}